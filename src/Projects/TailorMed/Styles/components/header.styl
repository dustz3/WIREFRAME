.site-header
  background base-white
  height 75px
  display flex
  align-items stretch

  .container
    layout-container()
    width 100%
    display flex
    align-items center
    justify-content space-between
    gap 32px
    height 100%

  .site-brand
    flex 0 0 auto

  .site-logo
    font-size 1.6rem
    font-weight 700
    color primary-color
    text-decoration none
    letter-spacing 0.02em

  .site-nav
    flex 1

    .nav-list
      display flex
      align-items center
      justify-content center
      gap 28px
      list-style none
      margin 0
      padding 0

      a
        font-size 0.95rem
        font-weight 400
        color neutral-gray
        text-decoration none
        letter-spacing 0
        transition color 0.2s ease

        &:hover,
        &.is-active
          color primary-color

  .header-actions
    flex 0 0 auto

    .btn--track
      display inline-flex
      align-items center
      justify-content center
      height 42px
      padding 0 24px
      border-radius 999px
      background secondary-color
      color primary-color
      font-weight 600
      text-decoration none
      transition transform 0.2s ease, box-shadow 0.2s ease

      &:hover
        transform translateY(-2px)
        box-shadow 0 10px 24px rgba(secondary-color, 0.25)
