// TailorMed 專案主要樣式

// 導入變數
@import 'variables.styl'

// 重置樣式
*
  margin 0
  padding 0
  box-sizing border-box

// 基礎樣式
html
  font-size font-size-base
  line-height 1.6

body
  font-family font-family-primary
  color text-color
  background-color background-color
  line-height 1.6

// 容器
.container
  max-width container-max-width
  margin 0 auto
  padding 0 container-padding

// Header
.site-header
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  background-color rgba(255, 255, 255, 0.8)
  backdrop-filter blur(10px)
  -webkit-backdrop-filter blur(10px)
  height 78px
  border-bottom 1px solid rgba(233, 236, 239, 0.5)
  display flex
  align-items center
  box-shadow 0 2px 8px rgba(0, 0, 0, 0.05)

  .container
    width 100%

.header-content
  display flex
  align-items center
  justify-content space-between
  height 78px

.brand
  display flex
  align-items center

.logo-placeholder
  display flex
  align-items center
  justify-content center
  height 40px
  min-width 120px
  background-color rgba(20, 52, 99, 0.05)
  border 1px dashed rgba(20, 52, 99, 0.3)
  border-radius 4px
  color primary-color
  font-size font-size-small
  font-weight 500
  letter-spacing 1px

.site-nav
  display flex
  gap 8px
  align-items center
  flex 1
  justify-content center

.nav-link
  color primary-color
  text-decoration none
  padding spacing-xs spacing-sm
  font-weight 500
  font-size 0.9rem
  transition all 0.3s ease
  white-space nowrap

  &:hover
    color darken(primary-color, 10%)

.header-actions
  display flex
  align-items center

.btn-track
  height 40px
  padding 0 spacing-md
  background-color primary-color
  color background-color
  text-decoration none
  border-radius border-radius-button
  font-weight 500
  transition all 0.3s ease
  white-space nowrap
  display inline-flex
  align-items center
  justify-content center
  box-sizing border-box
  line-height 1

  &:hover
    background-color darken(primary-color, 10%)

// Main Content
.main-content
  padding 0
  padding-top 78px

// Section Base Styles
.section
  padding spacing-xl 0
  background-color background-color

.section-header
  text-align center
  margin-bottom spacing-xl

.section-title
  font-size 2rem
  font-weight 700
  color primary-color
  margin-bottom spacing-sm

.section-subtitle
  font-size font-size-large
  font-weight 300
  color text-color
  margin-bottom 0

// Hero Section
.hero-section
  text-align center
  padding spacing-xl 0
  background-color primary-color
  display flex
  align-items center
  justify-content center
  min-height 50vw

  .container
    width 100%

.hero-title
  font-size 2.5rem
  font-weight 700
  margin-bottom spacing-md
  color #fff

.hero-subtitle
  font-size font-size-large
  font-weight 300
  margin-bottom spacing-lg
  color rgba(255, 255, 255, 0.9)

.hero-actions
  display flex
  gap spacing-sm
  justify-content center

  .btn-primary
    background-color #fff
    color primary-color
    border 2px solid #fff

    &:hover
      background-color rgba(255, 255, 255, 0.9)
      border-color rgba(255, 255, 255, 0.9)

  .btn-secondary
    background-color transparent
    color #fff
    border 2px solid #fff

    &:hover
      background-color rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.8)

// Trust Bar
.trust-bar
  background-color background-color
  padding spacing-lg 0

.trust-bar-content
  display flex
  justify-content space-around
  align-items center
  gap spacing-lg
  flex-wrap wrap

.trust-logo
  flex 1
  min-width 150px
  max-width 200px
  display flex
  justify-content center
  align-items center
  opacity 0.6
  transition opacity 0.3s ease

  &:hover
    opacity 1

  .logo-placeholder
    width 100%
    height 60px
    background-color transparent
    border 1px dashed #d0d0d0
    border-radius 4px
    display flex
    align-items center
    justify-content center
    color #999
    font-size font-size-small
    font-weight 500
    filter grayscale(100%)

  &:nth-child(1) .logo-placeholder
    background-color transparent
    border-color #b0b0b0
    color #666

  &:nth-child(2) .logo-placeholder
    background-color transparent
    border-color #a0a0a0
    color #777

  &:nth-child(3) .logo-placeholder
    background-color transparent
    border-color #909090
    color #888

  &:nth-child(4) .logo-placeholder
    background-color transparent
    border-color #808080
    color #999

// Compliance Badges Bar
.compliance-badges-bar
  background-color background-color
  padding spacing-lg 0

.compliance-badges-content
  display flex
  justify-content space-around
  align-items center
  gap spacing-lg
  flex-wrap wrap

.compliance-badge
  flex 1
  min-width 150px
  max-width 200px
  display flex
  justify-content center
  align-items center
  opacity 0.6
  transition opacity 0.3s ease

  &:hover
    opacity 1

  .badge-placeholder
    width 100%
    height 60px
    background-color transparent
    border 1px dashed #d0d0d0
    border-radius 4px
    display flex
    align-items center
    justify-content center
    color #999
    font-size font-size-small
    font-weight 500
    filter grayscale(100%)

  &:nth-child(1) .badge-placeholder
    background-color transparent
    border-color #b0b0b0
    color #666

  &:nth-child(2) .badge-placeholder
    background-color transparent
    border-color #a0a0a0
    color #777

  &:nth-child(3) .badge-placeholder
    background-color transparent
    border-color #909090
    color #888

  &:nth-child(4) .badge-placeholder
    background-color transparent
    border-color #808080
    color #999

// Solutions Section
.solutions-section
  background-color #f8f9fa

.solutions-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
  gap spacing-lg

.solution-card
  background-color background-color
  border 1px solid #e9ecef
  border-radius 12px
  padding spacing-lg
  text-align center
  transition all 0.3s ease

  &:hover
    transform translateY(-5px)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.1)

.solution-icon-placeholder
  width 60px
  height 60px
  margin 0 auto spacing-md
  background-color rgba(20, 52, 99, 0.05)
  border 1px dashed rgba(20, 52, 99, 0.3)
  border-radius 8px
  display flex
  align-items center
  justify-content center
  color primary-color
  font-size font-size-small
  font-weight 500

.solution-title
  font-size font-size-large
  font-weight 700
  color primary-color
  margin-bottom spacing-sm

.solution-description
  font-size font-size-base
  font-weight 300
  color text-color
  line-height 1.6
  margin-bottom spacing-md

.solution-link
  color primary-color
  text-decoration none
  font-weight 500
  font-size font-size-small
  transition all 0.3s ease

  &:hover
    text-decoration underline

// How We Work Section
.how-we-work-section
  background-color primary-color
  color #fff

  .section-title
    color #fff

  .section-subtitle
    color rgba(255, 255, 255, 0.9)

.workflow-steps
  display flex
  justify-content space-between
  align-items flex-start
  gap spacing-md
  position relative
  margin-top spacing-xl

.workflow-step
  flex 1
  display flex
  flex-direction column
  align-items center
  text-align center
  position relative

  &:last-child .step-arrow
    display none

.step-number
  width 40px
  height 40px
  border-radius 50%
  background-color #fff
  color primary-color
  display flex
  align-items center
  justify-content center
  font-size font-size-large
  font-weight 700
  margin-bottom spacing-sm

.step-icon-placeholder
  width 60px
  height 60px
  margin-bottom spacing-sm
  background-color rgba(255, 255, 255, 0.1)
  border 1px dashed rgba(255, 255, 255, 0.3)
  border-radius 8px
  display flex
  align-items center
  justify-content center
  color #fff
  font-size font-size-small
  font-weight 500

.step-title
  font-size font-size-large
  font-weight 700
  color #fff
  margin-bottom spacing-xs

.step-description
  font-size font-size-base
  font-weight 300
  color rgba(255, 255, 255, 0.9)
  line-height 1.6
  margin-bottom 0

.step-arrow
  position absolute
  top 20px
  right -30px
  font-size 2rem
  color #fff
  font-weight 700
  pointer-events none
  z-index 1

  @media (max-width: breakpoint-tablet)
    display none

// Expertise Section
.expertise-section
  background-color background-color

.expertise-content
  display grid
  grid-template-columns 1fr 1fr
  gap spacing-xl
  align-items center

.expertise-image
  display flex
  align-items center
  justify-content center

.expertise-image-placeholder
  width 100%
  height 400px
  background-color rgba(20, 52, 99, 0.05)
  border 1px dashed rgba(20, 52, 99, 0.3)
  border-radius 12px
  display flex
  align-items center
  justify-content center
  color primary-color
  font-size font-size-base
  font-weight 500

.expertise-features
  display grid
  grid-template-columns 1fr
  gap spacing-md
  margin-top spacing-lg

.expertise-feature
  display flex
  gap spacing-sm
  align-items start

.feature-icon-placeholder
  width 32px
  height 32px
  min-width 32px
  background-color primary-color
  color #fff
  border-radius 50%
  display flex
  align-items center
  justify-content center
  font-weight 700
  font-size 18px

.feature-title
  font-size font-size-base
  font-weight 700
  color primary-color
  margin-bottom spacing-xs

.feature-description
  font-size font-size-small
  font-weight 300
  color text-color
  line-height 1.5

.expertise-stats
  display grid
  grid-template-columns repeat(2, 1fr)
  gap spacing-lg
  margin-top spacing-lg

.stat-item
  text-align center
  padding spacing-md
  background-color background-color
  border-radius 8px

.stat-number
  font-size 2.5rem
  font-weight 700
  color primary-color
  margin-bottom spacing-xs

.stat-label
  font-size font-size-small
  font-weight 300
  color text-color

// Global Network Section
.global-network-section
  background-color #efefef

.global-network-content
  display grid
  grid-template-columns 1fr 1fr
  gap spacing-xl
  align-items start
  margin-top spacing-xl

.network-map
  display flex
  align-items center
  justify-content center

.map-iframe
  width 100%
  height 500px
  border-radius 12px
  border none

.network-locations
  display flex
  flex-direction column
  gap spacing-lg

.location-item
  padding spacing-md
  background-color #f8f9fa
  border-radius 8px
  border-left 4px solid primary-color
  transition all 0.3s ease

  &:hover
    transform translateX(5px)
    box-shadow 0 5px 15px rgba(0, 0, 0, 0.1)

.location-title
  font-size font-size-large
  font-weight 700
  color primary-color
  margin-bottom spacing-xs

.location-address
  font-size font-size-base
  font-weight 500
  color text-color
  margin-bottom spacing-xs

.location-details
  font-size font-size-small
  font-weight 300
  color text-color
  line-height 1.6
  margin-bottom spacing-xs

.location-contact
  font-size font-size-small
  font-weight 300
  color primary-color
  margin-bottom 0

// Insight Section
.insight-section
  background-color #fff

  .section-title
    color primary-color

  .section-subtitle
    color text-color

.insight-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
  gap spacing-lg

.insight-card
  background-color background-color
  border 1px solid #e9ecef
  border-radius 12px
  overflow hidden
  transition all 0.3s ease

  &:hover
    transform translateY(-5px)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.1)

.insight-image-placeholder
  width 100%
  height 200px
  background-color rgba(20, 52, 99, 0.05)
  border-bottom 1px solid #e9ecef
  display flex
  align-items center
  justify-content center
  color primary-color
  font-size font-size-small
  font-weight 500
  border 1px dashed rgba(20, 52, 99, 0.3)

.insight-content
  padding spacing-lg

.insight-date
  font-size font-size-small
  font-weight 300
  color rgba(51, 51, 51, 0.6)
  margin-bottom spacing-xs

.insight-title
  font-size font-size-large
  font-weight 700
  color primary-color
  margin-bottom spacing-sm
  line-height 1.4

.insight-excerpt
  font-size font-size-base
  font-weight 300
  color text-color
  line-height 1.6
  margin-bottom spacing-md

.insight-link
  color primary-color
  text-decoration none
  font-weight 500
  font-size font-size-small
  transition all 0.3s ease

  &:hover
    text-decoration underline

// About Section
.about-content
  display grid
  grid-template-columns 1fr 1fr
  gap spacing-xl
  align-items center

.about-description
  font-size font-size-base
  font-weight 300
  color text-color
  line-height 1.8
  margin-bottom spacing-md

.about-image-placeholder
  width 100%
  height 300px
  background-color rgba(20, 52, 99, 0.05)
  border 1px dashed rgba(20, 52, 99, 0.3)
  border-radius 12px
  display flex
  align-items center
  justify-content center
  color primary-color
  font-size font-size-base
  font-weight 500

// Support Section
.support-section
  background-color #f8f9fa

.support-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(250px, 1fr))
  gap spacing-lg

.support-card
  background-color background-color
  border 1px solid #e9ecef
  border-radius 12px
  padding spacing-lg
  text-align center
  transition all 0.3s ease

  &:hover
    transform translateY(-5px)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.1)

.support-icon-placeholder
  width 60px
  height 60px
  margin 0 auto spacing-md
  background-color rgba(20, 52, 99, 0.05)
  border 1px dashed rgba(20, 52, 99, 0.3)
  border-radius 50%
  display flex
  align-items center
  justify-content center
  color primary-color
  font-size font-size-small
  font-weight 500

.support-title
  font-size font-size-large
  font-weight 700
  color primary-color
  margin-bottom spacing-sm

.support-description
  font-size font-size-base
  font-weight 300
  color text-color
  margin-bottom spacing-md
  line-height 1.6

// Contact CTA Section
.contact-cta-section
  background-color primary-color
  color #fff
  padding spacing-xl 0

.cta-content
  text-align center

.cta-title
  font-size 2rem
  font-weight 700
  color #fff
  margin-bottom spacing-sm

.cta-subtitle
  font-size font-size-large
  font-weight 300
  color rgba(255, 255, 255, 0.9)
  margin-bottom spacing-xl

.cta-form-placeholder
  max-width 600px
  margin 0 auto spacing-lg
  display flex
  flex-direction column
  gap spacing-sm

.form-field-placeholder
  width 100%
  height 50px
  background-color rgba(255, 255, 255, 0.1)
  border 1px dashed rgba(255, 255, 255, 0.3)
  border-radius 8px
  display flex
  align-items center
  padding 0 spacing-md
  color rgba(255, 255, 255, 0.8)
  font-size font-size-base
  font-weight 300

.cta-contact-info
  display flex
  justify-content center
  gap spacing-xl
  margin-top spacing-lg

.contact-info-item
  text-align center

.info-label
  font-size font-size-small
  font-weight 500
  color rgba(255, 255, 255, 0.8)
  margin-bottom spacing-xs

.info-value
  font-size font-size-base
  font-weight 300
  color #fff

// 按鈕
.btn
  display inline-flex
  align-items center
  justify-content center
  height 40px
  padding 0 spacing-lg
  border-radius border-radius-button
  text-decoration none
  font-weight 500
  font-size font-size-base
  transition all 0.3s ease
  border none
  cursor pointer
  box-sizing border-box
  line-height 1

.btn-primary
  background-color primary-color
  color #fff
  border 2px solid primary-color
  box-sizing border-box

  &:hover
    background-color darken(primary-color, 10%)
    border-color darken(primary-color, 10%)

.btn-secondary
  background-color transparent
  color primary-color
  border 2px solid primary-color
  box-sizing border-box

  &:hover
    background-color primary-color
    color background-color
    border-color primary-color

// Footer
.site-footer
  background-color primary-color
  color #fff
  padding spacing-xl 0 spacing-lg
  border-top 1px solid rgba(255, 255, 255, 0.1)

.footer-content
  display grid
  grid-template-columns 2fr repeat(4, 1fr)
  gap spacing-lg
  margin-bottom spacing-xl

.footer-brand
  display flex
  flex-direction column
  align-items flex-start

  .logo-placeholder
    margin-bottom spacing-sm
    background-color rgba(255, 255, 255, 0.1)
    border-color rgba(255, 255, 255, 0.3)
    color rgba(255, 255, 255, 0.8)

.footer-description
  color rgba(255, 255, 255, 0.8)
  font-size font-size-small
  font-weight 300
  line-height 1.6
  margin 0
  margin-bottom spacing-sm
  max-width 250px

.social-icons
  display flex
  gap spacing-xs
  align-items center

.social-icon
  text-decoration none
  display inline-block

.social-icon-placeholder
  display flex
  align-items center
  justify-content center
  width 40px
  height 40px
  background-color rgba(255, 255, 255, 0.1)
  border 1px dashed rgba(255, 255, 255, 0.3)
  border-radius 50%
  color rgba(255, 255, 255, 0.8)
  font-size 12px
  font-weight 500
  transition all 0.3s ease

  &:hover
    background-color rgba(255, 255, 255, 0.15)
    border-color rgba(255, 255, 255, 0.5)
    color #fff

.footer-column
  display flex
  flex-direction column

.footer-title
  font-size font-size-base
  font-weight 700
  color #fff
  margin-bottom spacing-sm
  text-transform uppercase
  letter-spacing 1px

.footer-links
  list-style none
  padding 0
  margin 0

  li
    margin-bottom spacing-xs

.footer-link
  color rgba(255, 255, 255, 0.8)
  text-decoration none
  font-size font-size-small
  font-weight 300
  transition all 0.3s ease

  &:hover
    color #fff
    text-decoration underline

.footer-contact
  display flex
  flex-direction column
  gap spacing-xs

.footer-text
  color rgba(255, 255, 255, 0.8)
  font-size font-size-small
  font-weight 300
  margin 0
  line-height 1.6

.footer-bottom
  border-top 1px solid rgba(255, 255, 255, 0.1)
  padding-top spacing-lg
  text-align center

.site-footer__copy
  color rgba(255, 255, 255, 0.6)
  font-size font-size-small
  font-weight 300
  margin 0

// 響應式設計
@media (max-width: breakpoint-mobile)
  .site-header
    height auto
    min-height 78px

  .header-content
    flex-direction column
    height auto
    padding spacing-sm 0
    gap spacing-sm

  .site-nav
    flex-wrap wrap
    justify-content center
    gap spacing-xs

  .logo-placeholder
    height 32px
    min-width 100px

  .hero-section
    min-height auto
    padding spacing-lg 0

  .hero-title
    font-size 2rem

  .hero-actions
    flex-direction column
    align-items center

  .trust-bar-content
    flex-direction column
    gap spacing-md

  .trust-logo
    min-width 100%
    max-width 100%

  .compliance-badges-content
    flex-direction column
    gap spacing-md

  .compliance-badge
    min-width 100%
    max-width 100%

  .workflow-steps
    flex-direction column
    gap spacing-lg

  .workflow-step
    width 100%

  .step-arrow
    display none

  .footer-content
    grid-template-columns 1fr
    gap spacing-md

  .footer-column
    margin-bottom spacing-md

  .solutions-grid
    grid-template-columns 1fr

  .expertise-content
    grid-template-columns 1fr
    gap spacing-lg

  .expertise-image
    order 2

  .expertise-text
    order 1

  .expertise-image-placeholder
    height 300px

  .expertise-features
    grid-template-columns 1fr

  .expertise-stats
    grid-template-columns 1fr
    margin-top spacing-lg

  .global-network-content
    grid-template-columns 1fr
    gap spacing-lg

  .network-map
    order 2

  .network-locations
    order 1

  .map-iframe
    height 300px

  .insight-grid
    grid-template-columns 1fr

  .about-content
    grid-template-columns 1fr

  .support-grid
    grid-template-columns 1fr

  .cta-contact-info
    flex-direction column
    gap spacing-md

@media (min-width: breakpoint-mobile) and (max-width: breakpoint-tablet)
  .footer-content
    grid-template-columns 2fr repeat(2, 1fr)
    gap spacing-md

  .footer-brand
    grid-column span 2
    margin-bottom spacing-md

  .solutions-grid
    grid-template-columns repeat(2, 1fr)

  .expertise-content
    grid-template-columns 1fr

  .expertise-features
    grid-template-columns 1fr

  .expertise-stats
    grid-template-columns repeat(2, 1fr)

  .insight-grid
    grid-template-columns 1fr

  .about-content
    grid-template-columns 1fr

  .support-grid
    grid-template-columns repeat(2, 1fr)