              background rgba(187, 39, 73, 0.18)
              color #9a1f3a

            &.status-exception
              background rgba(225, 29, 72, 0.12)
              color #e11d48

    .results-note
      font-size 0.9rem
      color #64748b
      padding 12px 16px
      background rgba(248, 250, 252, 0.9)
      border 1px dashed rgba(12, 48, 88, 0.15)
      border-radius 12px
      text-align center

    .results-mobile-cta
      display none
      letter-spacing 0.05em
      text-transform uppercase
      font-size 1rem
      padding 0 22px
      height 55px
      border none
      border-radius 10px
      background #BB2749
      color white
      cursor pointer
      font-weight 700
      transition transform 0.2s ease

      .btn-text
        font-size inherit
        line-height 1

      &:hover
        transform translateY(-3px)
        background darken(#BB2749, 10%)

      &:active
        transform translateY(0)

    .results-summary,
    .results-list,
    .results-empty
      display none

  .summary-title
    font-size 1.75rem
    font-weight 600
    color #0f172a

  .summary-description
    font-size 1rem
    line-height 1.8
    color #475569
    max-width 720px

  .summary-stats
    display flex
    gap 32px

    .stat
      display flex
      flex-direction column
      gap 8px

      .stat-value
        font-size 1.5rem
        font-weight 700
        color #2563eb

      .stat-label
        font-size 0.875rem
        color #64748b
        letter-spacing 0.02em
        text-transform uppercase

  .summary-search
    display flex
    flex-direction column
    gap 16px
    padding 20px 24px
    background rgba(37, 99, 235, 0.06)
    border 1px solid rgba(37, 99, 235, 0.12)
    border-radius 12px

    .search-hint
      font-size 0.95rem
      color #1e293b

    .summary-form
      display flex
      flex-direction column
      gap 12px

      .form-row
        display grid
        grid-template-columns repeat(3, minmax(0, 1fr))
        gap 16px

        @media (max-width: 992px)
          grid-template-columns 1fr

      .input-group
        display flex
        flex-direction column
        gap 6px

        .input-label
          font-size 0.825rem
          font-weight 600
          color #0f172a
          text-transform uppercase
          letter-spacing 0.08em

        input
          padding 12px 14px
          border 1px solid rgba(15, 23, 42, 0.15)
          border-radius 10px
          font-size 1rem
          transition all 0.2s ease

          &::placeholder
            color #ccc

          &:focus
            border-color #2563eb
            box-shadow 0 0 0 3px rgba(37, 99, 235, 0.18)
            outline none

      .form-helper
        font-size 0.85rem
        color #64748b

        .contact-phone
          color #BB2749
          font-weight 600

      button.btn--primary
        font-weight 700
        letter-spacing 0.05em
        text-transform uppercase
        font-size 1.2rem

