  desktop: 1280px,
  laptop: 1024px,
  tablet: 768px,
  mobile: 480px
}

respond(size)
  breakpoint = breakpoints[size]
  if breakpoint
    @media (max-width: breakpoint)
      {block}
  else
    @media (max-width: size)
      {block}

