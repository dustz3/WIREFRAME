// TailorMed Shipment Tracking Styles
// 貨件追蹤系統樣式

// TailorMed Color Variables
primary-color = #143463
secondary-color = #97d3df
accent-color = #bb2749

// CSS Variables
:root
  --primary #0f172a
  --secondary #64748b
  --accent #2563eb
  --text-primary #0f172a
  --text-secondary #475569
  --bg-primary #ffffff
  --bg-secondary #f8fafc
  --border-color rgba(15, 23, 42, 0.08)

// Base Styles
*
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 16px
  line-height 1.6

body
  font-family 'Noto Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
  font-size 1rem
  color var(--text-primary)
  background-color var(--bg-primary)
  line-height 1.6

// Container
.container
  max-width 1200px
  margin 0 auto
  padding 0 20px

// Typography
h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.2
  color #fff
  margin-bottom 1rem

h1
  font-size 2.5rem

h2
  font-size 1.75rem

h3
  font-size 1.4rem

p
  margin-bottom 1rem
  color var(--text-secondary)
  line-height 1.7

// Buttons
.btn
  display inline-flex
  align-items center
  justify-content center
  padding 12px 24px
  border none
  border-radius 8px
  font-size 1rem
  font-weight 600
  text-decoration none
  cursor pointer
  transition all 0.2s ease
  text-transform uppercase
  letter-spacing 0.05em

  &--primary
    background #0C3058
    color white

    &:hover
      background #0a2642
      transform translateY(-2px)

  &--outline
    background transparent
    color white
    border 2px solid white

    &:hover
      background rgba(255, 255, 255, 0.1)
      transform translateY(-2px)

  &--large
    padding 16px 32px
    font-size 1.2rem

.site-header
  background white
  border-bottom 1px solid rgba(15, 23, 42, 0.08)
  position sticky
  top 0
  z-index 10
  backdrop-filter blur(8px)
  box-shadow 0 8px 24px rgba(15, 23, 42, 0.05)

  .container
    display flex
    align-items center
    justify-content space-between
    padding 18px 18px
    height 60px

.brand-logo
  display block
  max-height 44px
  width 80%

.site-nav
  display flex
  gap 18px

  @media (max-width: 768px)
    margin-left auto

.nav-link
  color var(--secondary)
  text-decoration none
  font-weight 500
  padding 8px 14px
  border-radius 999px
  transition .2s ease

  &:hover
    transform translateY(-3px)
    background rgba(37, 99, 235, 0.18)
    color var(--accent)

  @media (max-width: 768px)
    text-align right
    display inline-block

.site-footer
  background #0C3058
  color white
  padding 28px 0

  .container
    display flex
    justify-content center

  .site-footer__copy
    font-size 1rem
    text-align center
    color white

@media (max-width: 768px)
  .site-footer
    padding 20px 0

    .site-footer__copy
      font-size 0.8rem
      color white

.hero-banner
