  border-bottom 1px solid border-color
  padding spacing-4 0
  position sticky
  top 0
  z-index 100
  box-shadow shadow-sm

.header-content
  display flex
  align-items center
  justify-content space-between

.header-logo
  display flex
  align-items center
  gap spacing-3

.logo-text
  font-size font-size-xl
  font-weight 700
  color text-primary

.header-nav
  display flex
  align-items center

.nav-list
  display flex
  list-style none
  gap spacing-8

.nav-link
