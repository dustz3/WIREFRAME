@import 'variables'
@import 'components/header'
@import 'components/footer'
@import 'layout/typography'

html
  font-size 16px

body
  margin 0
  font-family 'Roboto', 'Noto Sans TC', 'Microsoft JhengHei', sans-serif
  background bgLight
  color textDark

*, *:before, *:after
  box-sizing border-box

.container
  max-width 1280px
  width 100%
  margin 0 auto
  padding 0 40px
  box-sizing border-box

.main
  min-height calc(100vh - 125px)

.hero
  padding 120px 0
  text-align center

  .hero-title
    font-size 3.5rem
    line-height 1.1
    font-weight 700
    margin-bottom 24px

  .hero-text
    max-width 720px
    margin 0 auto 40px
    font-size 1.125rem
    line-height 1.7
    color textLight

  .hero-actions
    display inline-flex
    align-items center
    justify-content center
    gap 16px

    .btn
      display inline-flex
      align-items center
      justify-content center
      padding 14px 32px
      font-size 1rem
      font-weight 600
      text-decoration none
      border-radius 2px
      transition transform 0.2s ease, box-shadow 0.2s ease

      &:hover
        transform translateY(-1px)

    .btn-primary
      background primaryColor
      color baseWhite
      box-shadow 0 10px 24px rgba(primaryColor, 0.25)

      &:hover
        box-shadow 0 12px 28px rgba(primaryColor, 0.3)

    .btn-secondary
      background secondaryColor
      color textDark
      box-shadow 0 10px 24px rgba(secondaryColor, 0.35)

      &:hover
        box-shadow 0 12px 28px rgba(secondaryColor, 0.4)

.about
  padding 60px 0
  background baseWhite

  .about-header
    max-width 720px
    margin 0 auto 56px
    text-align left

    .about-title
      font-size 2.4rem
      font-weight 600
      margin-bottom 16px

    .about-text
      font-size 1.05rem
      color textLight
      line-height 1.7

  .about-cards
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 32px

    .about-card
      background baseWhite
      border-radius 4px
      overflow hidden
      display flex
      flex-direction column
      align-items center
      text-align center
      padding-bottom 28px

      .card-media
        width 100%
        height 200px
        background #d2d7df

      .card-body
        padding 24px 24px 0
        display flex
        flex-direction column
        align-items center
        gap 10px

        .card-title
          font-size 1.25rem
          font-weight 600
          color textDark
          margin 0

        .card-text
          font-size 0.9rem
          line-height 1.55
          color textLight
          margin 0

        .card-link
          font-size 0.95rem
          font-weight 600
          color primaryColor
          text-decoration none
          margin-top 6px
          transition color 0.2s ease

          &:hover
            color accentColor
