.temp-logo
    display inline-flex
    align-items center
    gap 16px
    text-decoration none

    img
      width 56px
      height 56px

    .temp-logo-text
      font-size 0.95rem
      font-weight 700
      color primaryColor
      letter-spacing 0.06em
      line-height 1.2
      white-space pre-line

  .temp-nav-list
    list-style none
    display flex
    gap 24px
    margin 0
    padding 0

    a
      text-decoration none
      color #4b5563
      font-weight 400
      letter-spacing 0.05em
      transition color 0.2s ease

      &:hover,
      &:focus,
      &.active
        color primaryColor
