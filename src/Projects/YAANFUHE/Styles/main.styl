@import 'variables'
@import 'components/header'
@import 'components/footer'

html
  font-size 16px

body.temp-site
  font-family 'Noto Sans', 'PingFang TC', 'Microsoft JhengHei', sans-serif
  margin 0
  background neutralLight
  color #1f2933

.container
  max-width 1280px
  margin 0 auto
  padding 0 50px
  box-sizing border-box

.temp-header
  background #ffffff
  box-shadow 0 2px 12px rgba(20, 52, 99, 0.08)

  .container
    display flex
    align-items center
    justify-content space-between
    height 80px

  .temp-logo
    display inline-flex
    align-items center
    gap 16px
    text-decoration none

    img
      width 56px
      height 56px

    .temp-logo-text
      font-size 0.95rem
      font-weight 700
      color primaryColor
      letter-spacing 0.06em
      line-height 1.2
      white-space pre-line

  .temp-nav-list
    list-style none
    display flex
    gap 24px
    margin 0
    padding 0

    a
      text-decoration none
      color #4b5563
      font-weight 400
      letter-spacing 0.08em
      transition color 0.2s ease

      &:hover,
      &:focus,
      &.active
        color primaryColor

.hero
  padding 0
  background url('../images/hero.avif') center/cover no-repeat
  min-height 520px

  .container
    min-height inherit
    padding 0
    display flex
    align-items flex-end
    justify-content flex-start
    visibility hidden

.product-banner
  background #ffffff

  img
    display block
    width 100%
    height auto

.about-banner
  background #ffffff

  img
    display block
    width 100%
    height auto

.showcase
  background #0b0e14
  padding 80px 0

  .container
    display flex
    justify-content center

  .showcase-video
    width 100%
    max-width 960px
    max-height 500px
    border-radius 16px
    box-shadow 0 20px 48px rgba(0, 0, 0, 0.4)
    object-fit cover

.advantage-banner
  background #ffffff

  img
    display block
    width 100%
    height auto

.certificate-banner
  background #ffffff

  img
    display block
    width 100%
    height auto

.hot-products-banner
  background #ffffff

  img
    display block
    width 100%
    height auto

.product-overview
  background #ffffff
  padding 72px 0

  .product-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(220px, 1fr))
    gap 28px
    margin-top 32px

  .product-card
    background #f7fafc
    border-radius 18px
    padding 24px
    box-shadow 0 15px 30px rgba(20, 52, 99, 0.08)

.applications
  background #edf2f7
  padding 72px 0

  .application-list
    display grid
    gap 16px
    grid-template-columns repeat(auto-fit, minmax(260px, 1fr))
    padding-left 0
    list-style none

    li
      background #ffffff
      border-radius 14px
      padding 18px 20px
      box-shadow 0 10px 24px rgba(20, 52, 99, 0.06)

.factory
  background #ffffff
  padding 72px 0

  .factory-gallery
    display grid
    gap 24px
    grid-template-columns repeat(auto-fit, minmax(260px, 1fr))
    margin-top 32px

    figure
      margin 0
      background #f1f5f9
      border-radius 16px
      overflow hidden
      box-shadow 0 12px 24px rgba(20, 52, 99, 0.1)

      img
        width 100%
        height 180px
        object-fit cover

      figcaption
        padding 16px
        font-size 0.95rem

.advantage
  background #f8fafc
  padding 72px 0

  .advantage-grid
    display grid
    gap 20px
    grid-template-columns repeat(auto-fit, minmax(220px, 1fr))

    article
      background #ffffff
      border-radius 16px
      padding 24px
      min-height 180px
      box-shadow 0 12px 28px rgba(20, 52, 99, 0.08)

.certificates
  background #ffffff
  padding 72px 0

  .certificate-grid
    margin-top 32px
    display grid
    gap 20px
    grid-template-columns repeat(auto-fit, minmax(180px, 1fr))

    .certificate
      background #f1f5f9
      border-radius 12px
      padding 16px
      text-align center

      img
        width 100%
        height auto

.temp-footer
  background primaryColor
  color #fff
  padding 48px 0 32px

  .container
    display flex
    flex-direction column
    gap 12px
    text-align center

  p
    margin 0
    font-size 0.9rem
