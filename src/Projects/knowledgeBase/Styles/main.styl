@import 'variables.styl'

*
  margin 0
  padding 0
  box-sizing border-box

html
  font-size font-size-base

body
  font-family font-family-primary
  background-color base-lite-gray
  color text-color
  min-height 100vh
  display flex
  align-items center
  justify-content center
  padding spacing-xl 0

.main-wrapper
  width 100%
  max-width container-max-width
  margin 0 auto
  padding 0 container-padding

.hero-card
  background-color base-white
  border-radius 20px
  padding spacing-xl
  box-shadow 0 24px 48px rgba(14, 14, 15, 0.08)
  display grid
  gap spacing-lg

.hero-card__header
  display flex
  flex-direction column
  gap spacing-sm

.hero-card__title
  font-size 2.5rem
  color primary-color
  font-weight 700

.hero-card__subtitle
  font-size font-size-large
  color neutral-dark
  max-width 640px
  line-height 1.6

.hero-card__actions
  display flex
  gap spacing-md
  flex-wrap wrap

.btn
  display inline-flex
  align-items center
  justify-content center
  padding 12px 28px
  border-radius border-radius-button
  text-decoration none
  font-weight 600
  transition all 0.2s ease

.btn--primary
  background-color primary-color
  color base-white

  &:hover
    background-color darken(primary-color, 8%)
    transform translateY(-2px)

.btn--outline
  background-color transparent
  color primary-color
  border 2px solid primary-color

  &:hover
    background-color rgba(0, 55, 211, 0.08)
    transform translateY(-2px)

.hero-card__meta
  display grid
  grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
  gap spacing-md

.meta-item
  background-color base-lite-gray
  border-radius 12px
  padding spacing-md
  display flex
  flex-direction column
  gap spacing-xs

.meta-item__label
  font-size font-size-small
  text-transform uppercase
  letter-spacing 0.1em
  color neutral-dark
  opacity 0.7

.meta-item__value
  font-size font-size-large
  font-weight 700
  color secondary-color

.doc-wrapper
  width 100%
  max-width 960px
  margin 0 auto
  padding 0 container-padding

.doc-card
  background-color base-white
  border-radius 16px
  box-shadow 0 18px 36px rgba(14, 14, 15, 0.08)
  padding spacing-xl
  display flex
  flex-direction column
  gap spacing-lg

.doc-header
  display flex
  flex-direction column
  gap spacing-xs

.doc-title
  font-size 2rem
  font-weight 700
  color primary-color

.doc-subtitle
  font-size font-size-base
  color text-color
  opacity 0.8

.doc-body
  min-height 60vh
  border none
  border-radius 0
  padding spacing-lg
  background-color transparent
  color text-color
  line-height 1.7

  > * + *
    margin-top spacing-md

  h2
    font-size 1.6rem
    font-weight 700
    color primary-color

  h3
    font-size 1.3rem
    font-weight 600
    color secondary-color

  p
    font-size font-size-base
    color text-color
    line-height 1.8

  ul
    padding 0 2.5rem
    list-style disc
    list-style-position outside

  ol
    padding 0 2.5rem
    list-style decimal
    list-style-position outside

  ul, ol
    display grid
    gap spacing-xs
    margin 0

  li
    font-size font-size-base
    color neutral-dark

.doc-placeholder
  font-size font-size-base
  color neutral-dark
  opacity 0.6

.doc-hint
  font-size font-size-small
  color neutral-dark
  opacity 0.5
  text-align right

@media (max-width: breakpoint-tablet)
  body
    padding spacing-lg 0

  .hero-card
    padding spacing-lg
    border-radius 16px

  .doc-card
    padding spacing-lg

@media (max-width: breakpoint-mobile)
  .hero-card__title
    font-size 2rem

  .hero-card__actions
    flex-direction column
    align-items stretch

  .btn
    width 100%

  .doc-card
    padding spacing-md

  .doc-body
    padding spacing-md
