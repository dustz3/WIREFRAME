doctype html
html(lang="zh-TW")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title TailorMed嚚疏隞嗉蕭頩斤頂蝯?    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="css/main.css")
    script(src="js/interaction.js", defer)
  body
    header.site-header
      .container
        .brand
          img.brand-logo(src="images/logo.png", alt="TailorMed")
        nav.site-nav
          a.nav-link(href="https://tailormed.com.tw", target="_blank", rel="noopener") Back to TailorMed

    section.hero-banner
      .hero-overlay
      .container
        .hero-content
          .hero-text
            h1.hero-title Track Your TailorMed Shipments Anytime
            p.hero-subtitle.hero-subtitle--desktop Use your order number and job ID to review the most recent shipment status available from TailorMed.
            p.hero-subtitle.hero-subtitle--mobile Use your order number and job ID to review the most recent shipment status available from TailorMed.

    section.hero-summary
      .summary-card
        h2.summary-title Shipment Tracking Lookup
        .summary-search
          form.summary-form(action="#", method="get")
            .form-row
              label.input-group
                span.input-label Job No.
                input(type="text", name="order", placeholder="e.g. TM-439812", required)
              label.input-group
                span.input-label Tracking No.
                input(type="text", name="job", placeholder="e.g. JOB-20451", required)
              button.btn.btn--primary(type="submit") CHECK STATUS
            p.form-helper
              | Need help? Contact your TailorMed logistics specialist at 
              span.contact-phone +886 2-2694-6168
              |  for priority support.

      .results-card
        h3.results-title Latest shipment updates
        p.results-description Review the most recent update TailorMed has received for this shipment.
        .results-highlight
          .summary-grid
            .summary-field
              span.field-label Order No.
              span.field-value TM-439812
            .summary-field
              span.field-label Job No.
              span.field-value JOB-20451
            .summary-field
              span.field-label MAWB
              span.field-value 074-12345678
            .summary-field.status-field
              span.field-label Status
              span.field-value.status-inline.status-in-transit In Transit
            .summary-field
              span.field-label ETA
              span.field-value 2025-10-06 14:30 (local)
        p.results-note No recent updates. Please check again later.
        button.btn.btn--primary.results-mobile-cta(type="button")
          span.btn-text TRACKING ANOTHER SHIPMENT

      .status-card
        h3.status-title Shipment Status Timeline
        .timeline-container
          .timeline-track
            .timeline-progress(style="width: 87.5%")
          .timeline-nodes
            .timeline-node.completed(data-step="1")
              .node-dot
              .node-icon 1
            .timeline-node.completed(data-step="2")
              .node-dot
              .node-icon 2
            .timeline-node.completed(data-step="3")
              .node-dot
              .node-icon 3
            .timeline-node.completed(data-step="4")
              .node-dot
              .node-icon 4
            .timeline-node.completed(data-step="5")
              .node-dot
              .node-icon 5
            .timeline-node.completed(data-step="6")
              .node-dot
              .node-icon 6
            .timeline-node.completed(data-step="7")
              .node-dot
              .node-icon 7
            .timeline-node.active(data-step="8")
              .node-dot
              .node-pulse
              .node-icon 8
            .timeline-node.pending(data-step="9")
              .node-dot
              .node-icon 9
          .timeline-event-icon(style="left: 80%")
            img(src="images/icon-dryice.svg", alt="Dry Ice Refilled")
        .timeline-labels
          .timeline-row
            .timeline-card.completed
              .card-number 1
              .card-content
                .card-title Order Created
                .card-time 2025-10-01 09:30
            .timeline-card.completed
              .card-number 2
              .card-content
                .card-title Shipment Collected
                .card-time 2025-10-01 15:20
            .timeline-card.completed
              .card-number 3
              .card-content
                .card-title Origin Customs Process
                .card-time 2025-10-02 10:15
            .timeline-card.completed
              .card-number 4
              .card-content
                .card-title Export Released
                .card-time 2025-10-02 16:45
            .timeline-card.completed
              .card-number 5
              .card-content
                .card-title In Transit
                .card-time 2025-10-03 08:00
          .timeline-row
            .timeline-card.completed
              .card-number 6
              .card-content
                .card-title Destination Customs
                .card-time 2025-10-04 11:20
            .timeline-card.completed
              .card-number 7
              .card-content
                .card-title Import Released
                .card-time 2025-10-04 17:30
            .timeline-card.event
              .card-icon-wrapper
                img.card-icon-img(src="images/icon-dryice.svg", alt="Dry Ice")
              .card-content
                .card-title Dry Ice Refilled
                .card-time 2025-10-04 19:45
            .timeline-card.active
              .card-number 8
              .card-content
                .card-title Out for Delivery
                .card-time Processing...
            .timeline-card.pending
              .card-number 9
              .card-content
                .card-title Shipment Delivered
                .card-time Pending

